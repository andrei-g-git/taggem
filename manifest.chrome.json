{
    "manifest_version": 3, 
    "name": "Taggem",
    "short_name": "Taggem",
    "author": "andrei",
    "version": "0.1.0",
    "description": "Add a multiple tags directly to the URL of websites",
    "offline_enabled": true,
    "minimum_chrome_version": "88",
    "icons": {
        "128": "assets/taggem-logo-128.png",
        "48": "assets/taggem-logo-48.png",
        "16": "assets/taggem-logo-16.png"
    },
    "web_accessible_resources": [
        "assets/taggem-logo-48.png",
        "assets/ok-128.png",
        "assets/delete-64.png"
    ],
    "browser_action": {
        "default_icon": "assets/taggem-logo-16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {  
        "service_worker": "scripts/tabListener.js"   
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}